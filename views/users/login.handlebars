<!-- Login page -->
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="text-center">
            <form class="mt-3 form-signin" method="post" action="/users/login">
                <img class="mb-3 mx-auto" src="/images/logo.svg" alt="" width="72" height="72">
                <h2 class="h3 mb-3 font-weight-normal">Please sign in</h2>

                <!-- Username -->
                <label for="username" class="sr-only">Username</label>
                <input type="username" class="form-control" placeholder="Username" name="username" required autofocus>

                <!-- Password -->
                <label for="password" class="sr-only">Password</label>
                <input type="password" class="form-control" placeholder="Password"  name="password" required>
                
                <button type="submit" class="btn btn-lg btn-primary btn-block mt-2">Sign in</button>
            </form>
        </div>
    </div>
</div>