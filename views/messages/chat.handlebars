<h2>Messages</h2>

<!-- Contacts dialog -->


<!-- Message dialog -->
<div class="my-3 p-3 bg-white card card-body rounded box-shadow">

    <!-- Heading -->
    <div class="row pt-1 mb-4 border-bottom border-gray">
        <!-- Name display -->
        <div class="col-8 media text-muted ">
            {{#if image}}
            <img alt="32x32" class="mr-2 rounded" src="{{image}}" style="width: 38px; height: 38px;"> {{else}}
            <img alt="32x32" class="mr-2 rounded" src="/images/profile_picture.jpg" style="width: 38px; height: 38px;"> {{/if}}

            <div class="media-body pb-3 mb-0 small lh-125">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <strong class="text-gray-dark">{{firstname}} {{lastname}}</strong>
                </div>
                <span class="d-block">@{{nickname}}</span>
            </div>
        </div>

        <!-- Back button -->
        <div class="col-4">
            <small class="d-block text-right">
                <a href="/messages/">
                    <h6 style="display:inline">
                        <i class="fa fa-chevron-left"></i> Messages</h6>
                </a>
            </small>
        </div>
    </div>

    <!-- messages -->
    <div class="container pre-scrollable downscroll">

        <div>
            <!-- Load in contacts -->
            {{#each messages}} {{#if received}}
            <!-- Received message -->
            <div class="row">
                <!-- datum -->
                <div class="col-8">
                    <div class="media text-muted pb-1 mb-1 small lh-125">
                        <strong class="text-gray-dark">{{creation_date}}</strong>
                    </div>
                </div>
                <div class="col-4">
                    <!-- Empty col -->
                </div>
            </div>

            <div class="row">
                <!-- inhoud -->
                <div class="col-8">
                    <div class="card bg-light mb-3 float-left">
                        <div class="card-body">
                            <p class="card-text">{{content}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <!-- Empty col -->
                </div>
            </div>
            {{else}}
            <!-- Sent message -->
            <div class="row">
                <!-- datum -->
                <div class="col-4">
                    <!-- Empty col -->
                </div>
                <div class="col-8">
                    <div class="media text-muted pb-1 mb-1 small lh-125 float-right">
                        <strong class="float-right text-gray-dark">{{creation_date}}</strong>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- inhoud -->
                <div class="col-4">
                    <!-- Empty col -->
                </div>
                <div class="col-8">
                    <div class="card text-white bg-primary mb-3 ml-3 float-right">
                        <div class="card-body">
                            <p class="card-text">{{content}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}} {{else}}
            <!-- No Messages -->
            <div class="row pb-2 pt-4">
                <div class="col-10 media text-muted">
                    <div class="media-body pb-3 mb-0 small lh-125">

                    </div>
                </div>
            </div>
            {{/each}}


        </div>

    </div>

    <!-- Bottom border -->
    <div class="media text-muted pt-3 mb-3 border-bottom border-gray"></div>

    <!-- send message form -->
    <form action="/messages/{{id}}" method="post">
        <div class="input-group mb-3">
            <textarea class="form-control messagebox" name="message" placeholder="Type a message..." data-emojiable="true"
                    data-emoji-input="unicode"></textarea>
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>
    </form>

</div>